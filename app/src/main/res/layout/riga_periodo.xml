<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/periodo_nome"
            android:layout_width="242dp"
            android:layout_height="24dp" android:id="@+id/textNome"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="18sp"
            android:textColor="@android:color/primary_text_light" android:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="153dp"/>


    <TextView

            android:text="@string/periodo_anno"
            android:layout_width="41dp"
            android:layout_height="21dp" android:id="@+id/textAutore"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/textNome" android:textSize="16sp"
            android:textColor="@android:color/secondary_text_light" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="357dp" android:fontFamily="serif"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="6dp"/>

</android.support.constraint.ConstraintLayout>