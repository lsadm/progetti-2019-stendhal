<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Add_quadroemergente" android:id="@+id/frameLayout4">
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="373dp"
            android:layout_height="177dp"
            android:id="@+id/foto_quadro"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/inserisci" android:layout_marginTop="16dp"/>

    <TextView
            android:layout_width="262dp"
            android:layout_height="27dp"
            android:id="@+id/inserisci"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:text="@string/Inserisci"
            app:layout_constraintTop_toBottomOf="@+id/anno" android:layout_marginTop="40dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Nome"
            android:ems="10"
            android:id="@+id/Nome" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Anno"
            android:ems="10"
            android:id="@+id/anno" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Nome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="370dp"
            android:layout_height="176dp"
            android:inputType="textPersonName"
            android:hint="Spiegazione"
            android:ems="10"
            android:id="@+id/Spiegazione"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/foto_quadro" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>