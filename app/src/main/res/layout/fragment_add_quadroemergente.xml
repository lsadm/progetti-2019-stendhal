<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Add_quadroemergente" android:id="@+id/frameLayout4">
    <ImageButton
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:layout_width="373dp"
            android:layout_height="177dp"
            android:id="@+id/foto_quadro"
            android:backgroundTint="@android:color/darker_gray"
            android:scrollbarSize="4dp" style="@android:style/Widget.Holo.ImageButton" android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/inserisci" android:layout_marginTop="56dp"/>

    <TextView
            android:layout_width="160dp"
            android:layout_height="26dp"
            android:id="@+id/inserisci"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:text="@string/Inserisci"
            app:layout_constraintTop_toBottomOf="@+id/anno" android:layout_marginTop="44dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Nome"
            android:ems="10"
            android:id="@+id/Nome" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Anno"
            android:ems="10"
            android:id="@+id/anno" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/Nome" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="359dp"
            android:layout_height="214dp" android:id="@+id/Spiegazione"
            android:textSize="24sp" android:fontFamily="monospace"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/foto_quadro"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>