<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".dettaglio_gioco" android:id="@+id/dettaglioquadro">
    <ImageView
            android:layout_width="110dp"
            android:layout_height="wrap_content" tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/picture0"
            app:layout_constraintTop_toBottomOf="@+id/luogo_dettaglio" android:adjustViewBounds="true"
            android:layout_marginTop="140dp" android:clickable="true"/>
    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/nome_quadro"
            android:layout_marginStart="16dp" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="Autore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/autore_quadro" app:layout_constraintTop_toBottomOf="@+id/nome_quadro"
            android:textSize="24sp"
            android:textColor="@color/nintendo" android:layout_marginTop="96dp" android:layout_marginStart="36dp"/>
    <TextView
            android:text="Luogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/luogo_dettaglio"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/autore_quadro" android:layout_marginStart="216dp"
            app:layout_constraintBottom_toBottomOf="@+id/autore_quadro"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/utente_dettaglio" tools:text="@string/email"
            android:textAlignment="viewStart" style="@android:style/Widget.Material.Light.Button.Borderless.Small"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/picture0" android:textStyle="normal|italic"
            android:textColor="@color/common_google_signin_btn_text_light_pressed" android:textSize="14sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:layout_marginStart="16dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="95dp"
            tools:layout_editor_absoluteX="201dp" android:id="@+id/textView2"/>
</android.support.constraint.ConstraintLayout>