<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".dettaglio_quadro" android:id="@+id/dettaglioquadro">
    <ImageView
            android:layout_width="413dp"
            android:layout_height="177dp" tools:src="@tools:sample/avatars"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:id="@+id/picture"
            android:adjustViewBounds="true"
            android:clickable="true" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/autore_quadro" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="Nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:id="@+id/nome_quadro"
            android:layout_marginStart="16dp" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>
    <TextView
            android:text="Autore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/autore_quadro" app:layout_constraintTop_toBottomOf="@+id/nome_quadro"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Spiegazione"
            android:layout_width="408dp"
            android:layout_height="226dp"
            android:id="@+id/spiegazione" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/picture" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.23"/>
    <TextView
            android:text="Anno"
            android:layout_width="131dp"
            android:layout_height="38dp" android:id="@+id/anno_quadro"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/spiegazione"/>
</android.support.constraint.ConstraintLayout>