<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <!-- vedi -->

    <ImageButton
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="266dp" app:srcCompat="@drawable/guernica"
            android:id="@+id/imageButton_quadrodelgiorno"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <ImageButton
            android:layout_width="0dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="233dp" app:srcCompat="@drawable/creazione" android:id="@+id/imageButton_periodi"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_quadrodelgiorno"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="229dp" app:srcCompat="@drawable/marilyn"
            android:id="@+id/imageButton_quadri_artisti_emergenti"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>