<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageButton
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="163dp" app:srcCompat="@drawable/guernica"
            android:id="@+id/imageButton_quadrodelgiorno"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"/>
    <ImageButton
            android:layout_width="411dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="172dp" app:srcCompat="@drawable/creazione" android:id="@+id/imageButton_periodi"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_quadrodelgiorno"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_height="202dp" app:srcCompat="@drawable/marilyn" android:id="@+id/imageButton2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="64dp"/>
</android.support.constraint.ConstraintLayout>