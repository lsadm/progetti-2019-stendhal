<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".Fragment_Artista" android:id="@+id/fragment_area_personale">
    <TextView
            android:text="@string/defaults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailpersonale"
            app:layout_constraintBottom_toBottomOf="@+id/Email"
            app:layout_constraintStart_toEndOf="@+id/Email" android:layout_marginStart="124dp"
    />
    <android.support.v7.widget.RecyclerView
            android:layout_width="414dp"
            android:layout_height="405dp"
            tools:listitem="@layout/riga_quadro"
            android:id="@+id/lista_quadriemergenti"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/Opere"
            app:layout_constraintVertical_bias="0.571"/>
    <TextView
            android:text="Informazioni:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:id="@+id/Info" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginTop="4dp"/>
    <TextView
            android:text="Opere:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Opere" android:textSize="18sp"
            android:textStyle="bold" android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/Email" android:layout_marginTop="104dp"/>
    <TextView
            android:text="Email:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:id="@+id/Email"
            app:layout_constraintTop_toBottomOf="@+id/Info" android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/n_opere"
            app:layout_constraintStart_toEndOf="@+id/OperePubblicate"
            android:layout_marginStart="52dp" app:layout_constraintTop_toBottomOf="@+id/emailpersonale"
            android:layout_marginTop="20dp" android:text="@string/defaults"/>
    <TextView
            android:text="Opere pubblicate:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/OperePubblicate"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/Email" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/Opere" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintVertical_bias="0.173"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:clickable="true"
            android:id="@+id/floatingActionButton"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent" android:focusable="true"
            app:backgroundTint="@android:color/background_light"
            android:tint="@color/common_google_signin_btn_text_dark_focused"/>
</android.support.constraint.ConstraintLayout>