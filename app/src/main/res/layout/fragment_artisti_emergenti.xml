<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/coordinatorLayout" tools:layout_editor_absoluteY="81dp">
    <android.support.v7.widget.RecyclerView
            android:layout_width="410dp"
            android:layout_height="466dp"
            android:id="@+id/lista_quadri_emergenti" tools:listitem="@layout/riga_quadro"
            android:scrollbars="vertical"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.0"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.8"
    />
    <ImageButton
            android:layout_width="440dp"
            android:layout_height="148dp" app:srcCompat="@drawable/bottone2" android:id="@+id/imageButton2"
            android:background="#B4C6E7"
            android:layout_marginTop="3dp"
            app:layout_constraintTop_toBottomOf="@+id/lista_quadri_emergenti"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="2dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>