<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/quadro_nome"
            android:layout_width="242dp"
            android:layout_height="wrap_content" android:id="@+id/textNome"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/image_quadro"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            tools:srcCompat="@drawable/cornice"
            app:srcCompat="@drawable/cornice"
            android:id="@+id/image_quadro"
            android:contentDescription="@string/image_quadro" android:adjustViewBounds="true"
            android:drawingCacheQuality="high"
            android:visibility="visible"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/textNome"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView

            android:text="@string/quadro_autore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textAutore"
            app:layout_constraintStart_toEndOf="@+id/image_quadro"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/textNome"
            android:layout_marginTop="12dp"/>
    <TextView
            android:text="@string/quadro_anno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAnno"
            app:layout_constraintTop_toBottomOf="@+id/textAutore"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/image_quadro"
            android:layout_marginStart="16dp"/>

</android.support.constraint.ConstraintLayout>