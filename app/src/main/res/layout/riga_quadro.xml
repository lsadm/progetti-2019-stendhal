<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="@string/quadro_nome"
            android:layout_width="223dp"
            android:layout_height="26dp" android:id="@+id/textNome"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp" android:textSize="16dp"
            android:textColor="@android:color/primary_text_light" android:fontFamily="serif"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="14dp"
            app:layout_constraintStart_toEndOf="@+id/image_quadro" android:layout_marginStart="6dp"/>


    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            tools:srcCompat="@drawable/cornice"
            app:srcCompat="@drawable/cornice"
            android:id="@+id/image_quadro"
            android:contentDescription="@string/image_quadro" android:adjustViewBounds="true"
            android:drawingCacheQuality="high"
            android:visibility="visible"
            android:foregroundGravity="center_vertical|center|center_horizontal"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>

    <TextView

            android:text="@string/quadro_autore"
            android:layout_width="222dp"
            android:layout_height="25dp" android:id="@+id/textAutore"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textNome" android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/image_quadro" android:layout_marginStart="6dp"
            android:fontFamily="serif" android:textColor="@android:color/secondary_text_light"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="14dp"/>
    <TextView
            android:text="@string/quadro_anno"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:id="@+id/textAnno"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textAutore" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintStart_toEndOf="@+id/image_quadro"
            android:layout_marginStart="6dp" android:fontFamily="serif"
            android:textColor="@android:color/tertiary_text_light" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="187dp"/>

</android.support.constraint.ConstraintLayout>